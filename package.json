{
  "name": "@eclass/semantic-release-netlify",
  "version": "1.0.2",
  "description": "semantic-release plugin to deploy app with netlify",
  "main": "src/index.js",
  "scripts": {
    "lint": "eslint . --fix",
    "format": "prettier-standard '{src,test}/**/*.js'",
    "test": "nyc mocha test",
    "semantic-release": "semantic-release"
  },
  "engines": {
    "node": ">=14"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/eclass/semantic-release-netlify.git"
  },
  "keywords": [
    "publish",
    "netlify",
    "release",
    "semantic-release",
    "version"
  ],
  "author": "Leonardo Gatica <lgatica@protonmail.com> (https://about.me/lgatica)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/eclass/semantic-release-netlify/issues"
  },
  "homepage": "https://github.com/eclass/semantic-release-netlify#readme",
  "dependencies": {
    "@semantic-release/error": "4.0.0",
    "execa": "8.0.1"
  },
  "devDependencies": {
    "@commitlint/cli": "17.7.2",
    "@commitlint/config-conventional": "17.7.0",
    "@eclass/eslint-config": "4.0.0",
    "@eclass/semantic-release-npm-github-config": "4.0.0",
    "@semantic-release/changelog": "6.0.3",
    "@semantic-release/git": "10.0.1",
    "@types/chai": "4.3.6",
    "@types/mocha": "10.0.2",
    "@types/node": "20.8.2",
    "chai": "4.3.10",
    "eslint": "8.50.0",
    "eslint-plugin-array-func": "4.0.0",
    "eslint-plugin-eslint-comments": "3.2.0",
    "eslint-plugin-import": "2.28.1",
    "eslint-plugin-jsdoc": "46.8.2",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "6.1.1",
    "eslint-plugin-security": "1.7.1",
    "eslint-plugin-sonarjs": "0.21.0",
    "eslint-plugin-standard": "5.0.0",
    "fs-extra": "11.1.1",
    "husky": "8.0.3",
    "lint-staged": "14.0.1",
    "mocha": "10.2.0",
    "mock-require": "3.0.3",
    "nyc": "15.1.0",
    "nyc-config-common": "1.0.1",
    "prettier-standard": "15.0.1",
    "semantic-release": "22.0.5",
    "sinon": "16.1.0",
    "stream-buffers": "3.0.2",
    "tempy": "3.1.0"
  },
  "peerDependencies": {
    "semantic-release": ">=11.0.0 <18.0.0 || ^22.0.0"
  },
  "eslintConfig": {
    "extends": "@eclass"
  },
  "eslintIgnore": [
    "coverage"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "{src,test}/**/*.js": [
      "eslint --fix",
      "prettier-standard",
      "git add"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "renovate": {
    "automerge": "minor",
    "extends": [
      "config:js-lib"
    ]
  },
  "release": {
    "extends": "npm-github-config"
  },
  "nyc": {
    "extends": "@eclass/semantic-release-npm-github-config"
  }
}
