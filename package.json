{
  "name": "@eclass/semantic-release-netlify",
  "version": "1.0.2",
  "description": "semantic-release plugin to deploy app with netlify",
  "main": "src/index.js",
  "scripts": {
    "lint": "eslint . --fix",
    "format": "prettier-standard '{src,test}/**/*.js'",
    "test": "nyc mocha test",
    "semantic-release": "semantic-release"
  },
  "engines": {
    "node": ">=10"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/eclass/semantic-release-netlify.git"
  },
  "keywords": [
    "publish",
    "netlify",
    "release",
    "semantic-release",
    "version"
  ],
  "author": "Leonardo Gatica <lgatica@protonmail.com> (https://about.me/lgatica)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/eclass/semantic-release-netlify/issues"
  },
  "homepage": "https://github.com/eclass/semantic-release-netlify#readme",
  "dependencies": {
    "@semantic-release/error": "^2.1.0",
    "execa": "^3.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "9.1.2",
    "@commitlint/config-conventional": "9.1.2",
    "@eclass/eslint-config": "1.3.1",
    "@eclass/semantic-release-npm-github-config": "3.0.1",
    "@semantic-release/changelog": "5.0.1",
    "@semantic-release/git": "9.0.0",
    "@types/chai": "4.2.15",
    "@types/mocha": "7.0.2",
    "@types/node": "12.20.2",
    "chai": "4.3.0",
    "eslint": "6.8.0",
    "eslint-plugin-array-func": "3.1.7",
    "eslint-plugin-eslint-comments": "3.2.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-jsdoc": "17.1.2",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "4.3.1",
    "eslint-plugin-security": "1.4.0",
    "eslint-plugin-sonarjs": "0.6.0",
    "eslint-plugin-standard": "4.1.0",
    "fs-extra": "8.1.0",
    "husky": "4.3.8",
    "lint-staged": "9.5.0",
    "mocha": "7.2.0",
    "mock-require": "3.0.3",
    "nyc": "15.1.0",
    "nyc-config-common": "1.0.1",
    "prettier-standard": "15.0.1",
    "semantic-release": "17.3.9",
    "sinon": "7.5.0",
    "stream-buffers": "3.0.2",
    "tempy": "0.7.1"
  },
  "peerDependencies": {
    "semantic-release": ">=11.0.0 <18.0.0"
  },
  "eslintConfig": {
    "extends": "@eclass"
  },
  "eslintIgnore": [
    "coverage"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "{src,test}/**/*.js": [
      "eslint --fix",
      "prettier-standard",
      "git add"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "renovate": {
    "automerge": "minor",
    "extends": [
      "config:js-lib"
    ]
  },
  "release": {
    "extends": "npm-github-config"
  },
  "nyc": {
    "extends": "@eclass/semantic-release-npm-github-config"
  }
}
